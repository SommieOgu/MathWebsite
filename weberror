<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Math.co</title>
    <style>
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 70%;  /* Increase the width */
            max-width: 600px;  /* Max width */
            border-radius: 10px;  /* Rounded corners for aesthetic */
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        /* Button Styles */
        .button {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }

        .button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

    <!-- Button to trigger the modal -->
    <button class="button" id="inputButton">Input Polynomial</button>

    <!-- Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeModal">&times;</span>
            <div id="modalContent">
                <!-- PHP form will be injected here by AJAX -->
            </div>
        </div>
    </div>

    <script>
        // Get the modal and button
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("inputButton");
        var span = document.getElementById("closeModal");

        // When the user clicks the button, open the modal
        btn.onclick = function() {
            modal.style.display = "block";
            // Make AJAX request to fetch the PHP form content
            var xhr = new XMLHttpRequest();
            xhr.open('GET', 'inputpoly.php', true);
            xhr.onreadystatechange = function() {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    // Inject the form into the modal content
                    document.getElementById("modalContent").innerHTML = xhr.responseText;
                }
                // Optional: Handle any error scenarios if the PHP file doesn't return valid content
                else if (xhr.readyState === 4 && xhr.status !== 200) {
                    document.getElementById("modalContent").innerHTML = '<p>Sorry, an error occurred while fetching the form. Please try again.</p>';
                }
            };
            xhr.send();
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</body>
</html>
