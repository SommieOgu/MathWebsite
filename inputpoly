<?php 
    
$showAlert = false;  
$showError = false;  
$exists = false; 
    
if($_SERVER["REQUEST_METHOD"] == "POST") { 
      
    // Include file which makes the Database Connection. 
    include 'connect.php';    
    
    $firstPoly = $_POST["first_poly"];  
    $secondPoly = $_POST["second_poly"];  
    $thirdPoly = $_POST["third_poly"]; 
            
    
    $sql = "Select * from polynomials where first_poly='$firstPoly'"; 
    
    $result = mysqli_query($conn, $sql); 
    
    $num = mysqli_num_rows($result);  
    
    if($num == 0) { 
        if(($firstPoly == $secondPoly) && $exists==false) { 
    
            // Processing for polynomial factors (Example approach)
            // (Not implemented in the code here, just placeholder)
            $factoredPoly = "Factor of polynomials: $firstPoly and $secondPoly"; // Example process
            
            // Save to database
            $sql = "INSERT INTO `polynomials` ( `first_poly`, `second_poly`, `third_poly`, `factored_poly`, `date`) 
                    VALUES ('$firstPoly', '$secondPoly', '$thirdPoly', '$factoredPoly', current_timestamp())"; 
    
            $result = mysqli_query($conn, $sql); 
    
            if ($result) { 
                $showAlert = true;  
            } 
        }  
        else {  
            $showError = "Polynomials do not match";  
        }       
    }
    
   if($num>0) { 
      $exists="Polynomials already exist";  
   }  
} 
?> 

